# GuestFlow Backend — copy to .env and fill values
APP_NAME=GuestFlow API
DEBUG=false
ENVIRONMENT=development

API_V1_PREFIX=/api/v1

# PostgreSQL (async: postgresql+asyncpg://). Docker — порт 5434 на хосте
DATABASE_URL=postgresql+asyncpg://guestflow:guestflow@localhost:5434/guestflow

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT — use strong secret in production (e.g. openssl rand -hex 32)
SECRET_KEY=change-me-in-production-use-env
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
